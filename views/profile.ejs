<!doctype html>
<html>
<head>
    <title>Task List</title>
    <!--BROWSER ICON-->
    <link rel="shortcut icon" href="img/browserIcon.png">
    <!--GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
    <!--STYLESHEETS-->
    <link rel="stylesheet" href="reset.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><i class="bi bi-person-square"></i> Profile Page</h1>
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-3">
          <h2>Add a message</h2>
          <form action="/task" method="POST">
            <input type="text" placeholder="Task" name="task">
            <label for="day">Select a Day to Add to:</label>
            <select name="day" id="day">
              <option value="sunday">Sunday</option>
              <option value="monday">Monday</option>
              <option value="tuesday">Tuesday</option>
              <option value="wednesday">Wednesday</option>
              <option value="thursday">Thursday</option>
              <option value="friday">Friday</option>
              <option value="saturday">Saturday</option>
            </select>
            <button type="submit"><i class="bi bi-clipboard-check-fill"></i> Submit</button>
          </form>
        </div>
      </div>
    </div>


    <div class="container-xxl text-center">
      <div class="row row-col-7">

        <div class="sunday col-sm day">
          <h3>Sunday</h3>
          <ul class="taskList">
            <% for(let i=0; i <tasks.length; i++) { %>
              <li>
              <% if (tasks[i].day=='sunday' ) { %>
                <span class="item"><%= tasks[i].task %></span>
                <span class="hidden"><%= tasks[i].day %></span>
                <span><i class="bi bi-arrow-left-square-fill"></i></span>
                <span><i class="bi bi-arrow-right-square-fill"></i></span>
                <span><i class="bi bi-trash-fill"></i></span>
                <% } %>
              </li>
            <% } %>
          </ul>
        </div>

        <div class="monday col-sm day">
